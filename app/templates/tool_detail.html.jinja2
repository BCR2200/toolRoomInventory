{% extends "base.html.jinja2" %}

{% block title %}TRI - Tool Details - {{ tool.name }}{% endblock %}

{% block nav_items %}
    <a class="nav-link" href="{{ url_for('dashboard') }}">Main Dashboard</a>
    <a class="nav-link" href="{{ url_for('admin_dashboard') }}">Admin Dashboard</a>
    <span class="nav-link">Welcome, {{ user.name }}</span>
{% endblock %}

{% block content %}
    <div class="card mb-4">
        <div class="card-header">
            <h2>Tool Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Tool Image Column -->
                <div class="col-md-4">
                    {% if tool.picture_url %}
                        <img style="object-fit: contain; width: 100%;"
                             src="{{ url_for('tool_image', img=tool.picture_url) }}"
                             class="img-fluid rounded" alt="{{ tool.name }}">
                    {% else %}
                        <div class="text-center p-4 bg-light rounded">
                            <em>No image available</em>
                        </div>
                    {% endif %}

                    {% if tool.barcode_url %}
                        <div class="mt-3 text-center">
                            <img style="object-fit: contain; width: 100%;"
                                 src="{{ url_for('tool_barcode', img=tool.barcode_url) }}"
                                 class="img-fluid" alt="Tool Barcode" id="barcode-img">
                            <div class="mt-2">
                                <small class="text-muted">Barcode: {{ tool.barcode }}</small>
                                <button onclick="printImage('{{ url_for('tool_barcode', img=tool.barcode_url) }}', 'Tool Barcode')">Print Image</button>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Tool Details Column -->
                <div class="col-md-8">
                    <h3>{{ tool.name }}</h3>
                    <p class="text-muted">ID: {{ tool.tool_id }}</p>

                    <div class="mb-4">
                        <h5>Description</h5>
                        <p>{{ tool.description }}</p>
                    </div>

                    <div class="mb-4">
                        <h5>Status</h5>
                        {% if tool.signed_out %}
                            <div class="alert alert-warning">
                                <strong>Currently Signed Out</strong><br>
                                Holder: {{ users[tool.holder_id].name }}<br>
                                Since: {{ tool.signed_out_since_human }}
                            </div>
                        {% else %}
                            <div class="alert alert-success">
                                <strong>Available</strong>
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#editTool{{ tool.tool_id }}">
                            Edit Tool
                        </button>
                        <form method="POST" action="{{ url_for('delete_tool') }}" class="d-inline">
                            <input type="hidden" name="tool_id" value="{{ tool.tool_id }}">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this tool?')">
                                Delete Tool
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Tool Modal -->
    <div class="modal fade" id="editTool{{ tool.tool_id }}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Tool</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="POST" action="{{ url_for('edit_tool') }}" enctype="multipart/form-data">
                        <input type="hidden" name="tool_id" value="{{ tool.tool_id }}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tool Name</label>
                            <input type="text" class="form-control" id="name" name="name"
                                   value="{{ tool.name }}" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description"
                                      rows="3">{{ tool.description }}</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="picture" class="form-label">Update Picture</label>
                            <input type="file" class="form-control" id="picture" name="picture">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
<script>
    function printImage(src, alt) {
        // Create a new window containing just the image
        const printWindow = window.open('', '_blank');
        const img = document.getElementById('barcode-img');

        printWindow.document.write(`
        <html>
            <head>
                <title>Print Image</title>
                <style>
                    /* Center the image on the print page */
                    img {
                        max-width: 100%;
                        display: block;
                        margin: 0 auto;
                    }
                    small {
                        display: block;
                        text-align: center;
                        margin-top: 10px;
                    }
                </style>
            </head>
            <body>
                <img src="${src}" alt="${alt || ''}">
                <small>barcode: ${alt}</small>
                <script>
                    // Automatically trigger print dialog when loaded
                    window.onload = function() {
                        window.print();
                        window.onafterprint = function() {
                            window.close();
                        }
                    }
                <\/script>
            </body>
        </html>
    `);
        printWindow.document.close();
    }
</script>
{% endblock %}
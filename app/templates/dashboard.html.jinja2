{% extends "base.html.jinja2" %}

{% block title %}TRI - Dashboard{% endblock %}

{% block content %}
    <div class="row">
        <!-- Available Tools Section -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h2>Available Tools</h2>
                </div>
                <div class="card-body">
                    {% if available_tools %}
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Barcode</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for id, tool in available_tools.items() %}
                                    <tr>
                                        <td><a href="{{ url_for('tool_detail', tool_id=tool.tool_id) }}">{{ tool.name }}</a></td>
                                        <td><p style="white-space: pre-line">{{ tool.description }}</p></td>
                                        <td>
                                            {% if tool.signed_out %}
                                                Signed out to {{ users[tool.holder_id].name }}
                                            {% else %}
                                                Available
                                            {% endif %}
                                        </td>
                                        <td>{{ tool.barcode }}</td>
                                        <td>
{#                                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editTool{{ tool.tool_id }}">Edit</button>#}
{#                                        TODO: Do we want to use a modal here?#}
                                            {% if user.is_user %}
                                                <form method="POST" action="{{ url_for('borrow_tool') }}">
                                                    <input type="hidden" name="tool_id" value="{{ tool.tool_id }}">
                                                    <input type="hidden" name="user_id" value="{{ user.user_id }}">
                                                    <button type="submit" class="btn btn-sm btn-primary">Borrow</button>
                                                </form>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p>No tools currently available.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Signed Out Tools Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Signed Out Tools</h2>
                </div>
                <div class="card-body">
                    {% if signed_out_tools %}
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Barcode</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for id, tool in signed_out_tools.items() %}
                                        <tr>
                                            <td><a href="{{ url_for('tool_detail', tool_id=tool.tool_id) }}">{{ tool.name }}</a></td>
                                            <td><p style="white-space: pre-line">{{ tool.description }}</p></td>
                                            <td>
                                                {% if tool.signed_out %}
                                                    Signed out to {{ users[tool.holder_id].name }}
                                                {% else %}
                                                    Available
                                                {% endif %}
                                            </td>
                                            <td>{{ tool.barcode }}</td>
                                            <td>
                                                {# <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editTool{{ tool.tool_id }}">Edit</button>#}
                                                {# TODO: Do we want to use a modal here?#}
                                                {% if user.is_user %}
                                                    <form method="POST" action="{{ url_for('return_tool') }}">
                                                        <input type="hidden" name="tool_id" value="{{ tool.tool_id }}">
                                                        <input type="hidden" name="user_id" value="{{ user.user_id }}">
                                                        <button type="submit" class="btn btn-sm btn-success">Return</button>
                                                    </form>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p>No tools are currently signed out.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}